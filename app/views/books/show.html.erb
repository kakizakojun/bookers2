

<%= flash[:notice] %>


<%= render 'users/user', user: @user, book: @book %>



<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
    <tbody>

        <tr>
            <td><%=link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= link_to @user.name, user_path(@user.id) %>
            <% end %></td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
            <% end %>
        </tr>
    </tbody>
</table>
</div>
</div>
</div>