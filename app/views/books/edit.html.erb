
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>Editing Book</h1>

    <div class="errors_explanation">
      <% if @book.errors.any? %>
       <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
       <% @book.errors.full_messages.each do |messege| %>
       <li><%= messege %></li>
       <% end %>
      </ul>
      <% end %>
    </div>

    <%= form_with model: @book do |f| %>

    <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, placeholder: "" ,class: "form-control book_title" %>
    </div>

    <div class="form-group">
     <label for="book_opinion">Opinion</label>
     <%= f.text_area :body, placeholder:"", class:"form-control book_body" %>
    </div>

    <div clas="form-group">
     <%= f.submit 'Update Book', class:"btn btn-success" %>
    </div>

    <% end %>

    <%= link_to "show", book_path(params[:id]) %>
    |
    <%= link_to "back", books_path %>

    </div>
  </div>
</div>