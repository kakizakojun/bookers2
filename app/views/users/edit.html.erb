
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <div class="errors_explanation">
      <% if @user.errors.any? %>
       <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
       <% @user.errors.full_messages.each do |messege| %>
       <li><%= messege %></li>
       <% end %>
      </ul>
      <% end %>
    </div>

    <%= form_with model: @user do |f| %>
    <div class="form-group">
     <label for="user_name">Name</label>
     <%= f.text_field :name, placeholder:"" ,class: "form-control name" %>
    </div>

    <div class="form-group">
     <label for="user_Image">Image</label>
     <%= f.file_field :profile_image, placeholder: "Image",accept: "image/*", class: "form-control-file user_image" %>
    </div>

    <div class="form-group">
     <label for="user_Introduction">Introduction</label>
     <%= f.text_area :introduction, placeholder:"", class:"form-control introduction" %>
    </div>

    <div clas="form-group">
     <%= f.submit'Update User', class: "btn btn-secondary" %>
    </div>

    <% end %>

    </div>
  </div>
</div>