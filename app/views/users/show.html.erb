
<%= flash[:notice] %>

<%= render'user', user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover tabole-inverse">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= image_tag @user.get_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <!--<td><#%= link_to 'Edit', edit_book_path(book.id) %></td>-->
           <!--<td><#%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>-->
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
</div>
