<h2>Users info</h2>

<div>
<%= @user.name %>
<%= image_tag @user.get_image(100,100) %>
</div>

<p><%= link_to "edit",edit_user_path %></p>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>



