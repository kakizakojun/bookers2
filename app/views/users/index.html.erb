
<%= render'user',user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table table-hover tabole-inverse">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= image_tag @user.get_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'show', user_path(user.id) %></td>
           <!--<td><#%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>-->
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
